        function exportToPDF() {
            const data = collectFormData();
            const element = document.querySelector('.container');
            const opt = {
                margin: 10,
                filename: `SMART_FARM_${data.groupName}_${data.groupDate}.pdf`,
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2 },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' },
                pagebreak: { mode: ['avoid-all', 'css', 'legacy'] }
            };
            html2pdf().set(opt).from(element).save();
            alert('‚úÖ ‡∏™‡πà‡∏á‡∏≠‡∏≠‡∏Å PDF ‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!');
        }

        function clearForm() {
            if (confirm('‡∏Ñ‡∏∏‡∏ì‡πÅ‡∏ô‡πà‡πÉ‡∏à‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î?')) {
                document.querySelectorAll('input[type="text"], textarea').forEach(el => {
                    if (!el.hasAttribute('readonly')) {
                        el.value = '';
                    }
                });
                document.getElementById('groupDate').valueAsDate = new Date();
                alert('‚úÖ ‡∏•‡∏ö‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!');
            }
        }

        // Auto-save to localStorage
        function autoSave() {
            const data = collectFormData();
            localStorage.setItem('smartFarmWorksheet', JSON.stringify(data));
        }

        // Load from localStorage on page load
        window.addEventListener('load', function() {
            const saved = localStorage.getItem('smartFarmWorksheet');
            if (saved) {
                const data = JSON.parse(saved);
                document.getElementById('groupName').value = data.groupName;
                document.getElementById('groupDate').value = data.groupDate;
                data.members.forEach((member, i) => {
                    document.getElementById(`member${i + 1}`).value = member;
                });
                // Load activity data...
            }
        });

        // Auto-save every 30 seconds
        setInterval(autoSave, 30000);

        // Save on input change
        document.querySelectorAll('input, textarea').forEach(el => {
            el.addEventListener('change', autoSave);
        });
    </script>
</body>
</html>
